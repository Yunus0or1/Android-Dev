<?xml version="1.0" encoding="utf-8"?>

<!-- This is border. You can define it and add as background to
any image. -1 indicates in bottom,top,right,left that it will hide
this amount of width that is defined in android:width. In this case
it is 1dp so they will hide all 1dp  size. -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="1dp">

    <item
        android:bottom="1dp"
        android:top="-1dp"
        android:right="-1dp"
        android:left="-1dp">

        <shape
            android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/grey"/>
            <solid
                android:color="@color/white"/>

        </shape>
    </item>


</layer-list>